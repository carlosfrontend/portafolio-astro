---
import Image from 'astro/components/Image.astro';
import logo from '../assets/images/logo.webp';
import { ThemeController } from './ThemeController.tsx';
let activeClass = 'link-base bg-violet-700 text-white';
---

<header class='sticky top-0 z-50'>
  <div class='navbar bg-base-200 shadow-sm font-normal'>
    <div class='navbar-start'>
      <div class='dropdown'>
        <div
          tabindex='0'
          role='button'
          aria-label='Menu'
          class='btn btn-ghost lg:hidden'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            class='h-5 w-5'
            fill='none'
            viewBox='0 0 24 24'
            stroke='currentColor'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M4 6h16M4 12h8m-8 6h16'></path>
          </svg>
        </div>
        <ul
          tabindex='0'
          class='menu menu-lg dropdown-content bg-base-100 rounded-box z-1 mt-3 w-52 p-2 shadow gap-4'
        >
          <li>
            <a href='/' class={Astro.url.pathname === '/' ? activeClass : ''}
              >Inicio</a
            >
          </li>
          <li>
            <a
              href='/about'
              class={Astro.url.pathname === '/about' ? activeClass : ''}
              >Sobre mí</a
            >
          </li>
          <li>
            <a
              href='/projects'
              class={Astro.url.pathname === '/projects' ? activeClass : ''}
              >Proyectos</a
            >
          </li>
          <li>
            <a
              href='/blog'
              class={Astro.url.pathname === '/blog' ? activeClass : ''}>Blog</a
            >
          </li>
          <li>
            <a
              href='/contact'
              class={Astro.url.pathname === '/contact' ? activeClass : ''}
              >Contacto</a
            >
          </li>
        </ul>
      </div>
      <a class='btn btn-ghost normal-case text-xl' href='/'
        ><Image
          loading='eager'
          width={32}
          src={logo}
          alt='Logo del portafolio'
        />Carlos Pulido</a
      >
    </div>
    <div class='navbar-center hidden lg:flex'>
      <ul class='menu menu-horizontal gap-2'>
        <li>
          <a href='/' class={Astro.url.pathname === '/' ? activeClass : ''}
            >Inicio</a
          >
        </li>
        <li>
          <a
            href='/about'
            class={Astro.url.pathname === '/about' ? activeClass : ''}
            >Sobre mí</a
          >
        </li>
        <li>
          <a
            href='/projects'
            class={Astro.url.pathname === '/projects' ? activeClass : ''}
            >Proyectos</a
          >
        </li>
        <li>
          <a
            href='/blog'
            class={Astro.url.pathname === '/blog' ? activeClass : ''}>Blog</a
          >
        </li>
        <li>
          <a
            href='/contact'
            class={Astro.url.pathname === '/contact' ? activeClass : ''}
            >Contacto</a
          >
        </li>
      </ul>
    </div>
    <div class='navbar-end'>
      <ThemeController client:visible />
    </div>
  </div>
</header>
